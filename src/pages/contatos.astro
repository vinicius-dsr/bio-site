---
import Button from "../components/ui/Button.astro";
import { contacts } from "../data/contact";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Bio Site - Contatos">
  <main class="h-[70vh]">
    <div class="flex flex-col justify-center h-full gap-4 max-w-[70vw]">
      {
        contacts.map((contact) => (
          <Button variant="primary" href={contact.href}>
            <contact.icon class="text-lg" />
            <span class="text-white/60">{contact.name}</span>
          </Button>
        ))
      }
    </div>
  </main>
</Layout>
